<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="STOP TRACKING TIME"
        android:id="@+id/stop_tracking_time_button"
        android:background="@android:color/holo_red_light"
        android:layout_gravity="right"
        android:layout_below="@+id/project_name_input"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_input"
        android:hint="Project details: updates, comments, etc."
        android:gravity="top"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tracking_timer"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/cancel_tracking_time_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:background="@android:color/holo_green_light"
        android:id="@+id/submit_tracking_time_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/cancel_tracking_time_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/project_name_input"
        android:hint="Project name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/stop_tracking_time_button"/>

    <Chronometer
        android:id="@+id/tracking_timer"
        android:format="%s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_below="@+id/stop_tracking_time_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"/>

</RelativeLayout>